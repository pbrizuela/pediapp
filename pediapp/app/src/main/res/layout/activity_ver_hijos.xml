<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".VerHijos">

    <ScrollView
        android:background="@drawable/fondo_blanco_verde2"
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titulo"
                android:text="Seleccionar  Hijo/a:"
                android:textColor="@color/blue_grey_900"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="28dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="86dp"
                android:layout_below="@+id/space"
                android:layout_centerHorizontal="true" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/nomnacsex"
                android:background="@color/gris_claro"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/titulo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:id="@+id/segundo_titulo"
                android:text=""
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:typeface="sans"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/nomnacsex"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/segundo_titulo"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/tdireccion"
                android:text=" "
                android:textColor="@color/gris"
                android:typeface="sans"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="left"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/segundo_titulo"
                android:layout_toRightOf="@+id/tdireccion"
                android:layout_toEndOf="@+id/tdireccion"
                android:layout_marginTop="30dp"
                android:id="@+id/direccion"
                android:text=" "
                android:textColor="@color/gris"
                android:typeface="sans"
                android:textSize="16dp"
                android:gravity="left"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/direccion"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/ttelefono"
                android:text=" "
                android:textColor="@color/gris"
                android:typeface="sans"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="left"
                android:layout_above="@+id/temail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/direccion"
                android:layout_toRightOf="@id/ttelefono"
                android:layout_toEndOf="@id/ttelefono"
                android:layout_marginTop="10dp"
                android:id="@+id/telefono"
                android:text=" "
                android:textColor="@color/gris"
                android:typeface="sans"
                android:textSize="16dp"
                android:gravity="left"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telefono"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/temail"
                android:text=" "
                android:textColor="@color/gris"
                android:typeface="sans"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="left"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telefono"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/temail"
                android:layout_toEndOf="@+id/temail"
                android:id="@+id/email"
                android:text=" "
                android:textColor="@color/gris"
                android:typeface="sans"
                android:textSize="16dp"
                android:gravity="left"
                android:layout_centerHorizontal="true"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/space" />
            <LinearLayout
                android:id="@+id/sign_out_and_disconnect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="1"
                android:layout_below="@+id/segundo_titulo">


                <Button
                    android:id="@+id/siguiente"
                    android:layout_width="144dp"
                    android:layout_height="match_parent"
                    android:onClick="siguiente1"
                    android:text="Vacunas del     Hijo/a"
                    android:theme="@style/ThemeOverlay.MyDarkButton"
                    android:layout_weight="0.25" />

                <Button
                    android:id="@+id/mostrarmas"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="mostrarMas"
                    android:text="Datos del  Hijo/a"
                    android:theme="@style/ThemeOverlay.MyDarkButton" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>